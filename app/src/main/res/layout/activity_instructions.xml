<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_legal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.george.otcprices.Instructions">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructionsOfUse"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/instructionsViewMargin"
        android:layout_marginEnd="@dimen/instructionsViewMargin"
        android:background="#FF979395" />

    <ScrollView
        android:id="@+id/scrollViewTextInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textViewMarginInstructions"
            android:text="@string/instructionsForOtc"
            android:textAlignment="center"/>
    </ScrollView>
</LinearLayout>